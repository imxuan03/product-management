extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    .container.my-5
        .row.justify-content-center
            .col-8.d-flex.justify-content-center
                h1(class="text-center") Lấy lại mật khẩu

                form(
                    action=`/user/password/forgot`
                    method="POST"
                )
                    div(class="form-group mt-20")
                        label(
                            for="email"
                            class="input-login-label"
                        ) Email
                        input(
                            type="email"
                            class="form-control input-login"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-dark btn-block login-submit-btn"
                        ) Gửi email xác nhận
                